<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.gushiyou.app.main.mvp.ui.activity.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <View style="@style/DividerStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flMessageAlert"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/message_alert" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_white">

                <View
                    style="@style/DividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flNotDisturbMode"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/not_disturb_mode" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/ItemBottomShadowStyle" />

        <View
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/medium_vertical_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flPrivacy"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/privacy" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_white">

                <View
                    style="@style/DividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flCommonSettings"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/common_settings" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_white">

                <View
                    style="@style/DividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAccountManagement"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/account_management" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/ItemBottomShadowStyle" />

        <View
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/medium_vertical_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flClearCache"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/clear_cache" />

                <TextView
                    android:id="@+id/tvCacheSize"
                    style="@style/SecondaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    tools:text="0 MB" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_white">

                <View
                    style="@style/DividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAbout"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/about_gushiyou" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/ItemBottomShadowStyle" />

        <View
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/medium_vertical_margin" />

        <FrameLayout
            android:id="@+id/flLogout"
            style="@style/ItemStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                style="@style/PrimaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="@string/logout" />
        </FrameLayout>

        <View style="@style/ItemBottomShadowStyle" />
    </LinearLayout>
</ScrollView>