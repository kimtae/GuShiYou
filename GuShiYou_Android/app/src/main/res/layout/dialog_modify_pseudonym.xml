<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etPseudonym"
        style="@style/PrimaryTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pseudonym"
        android:inputType="text"
        android:maxLength="12"
        android:maxLines="1"
        android:textCursorDrawable="@drawable/text_cursor"
        app:met_autoValidate="true"
        app:met_clearButton="true"
        app:met_floatingLabel="none"
        app:met_maxCharacters="12"
        app:met_minCharacters="2"
        app:met_primaryColor="@color/colorAccent"
        app:met_textColor="@color/textPrimary" />

    <TextView
        style="@style/SmallestTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_vertical_margin"
        android:text="@string/modify_pseudonym_hint" />
</LinearLayout>