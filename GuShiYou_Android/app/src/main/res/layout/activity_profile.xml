<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.gushiyou.app.main.mvp.ui.activity.ProfileActivity">

        <View style="@style/DividerStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flAvatar"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/mine_profile_card_padding"
                android:paddingTop="@dimen/mine_profile_card_padding">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/avatar" />

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/mine_avatar_size"
                    android:layout_height="@dimen/mine_avatar_size"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_white">

                <View
                    style="@style/DividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flPseudonym"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/pseudonym" />

                <TextView
                    android:id="@+id/tvPseudonym"
                    style="@style/SecondaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/profile_item_value_margin_left"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:maxLines="1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_white">

                <View
                    style="@style/DividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flGushihao"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/gushihao" />

                <TextView
                    android:id="@+id/tvGushihao"
                    style="@style/SecondaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/profile_item_value_margin_left"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:maxLines="1" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/ItemBottomShadowStyle" />

        <View
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/medium_vertical_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flGender"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/gender" />

                <TextView
                    android:id="@+id/tvGender"
                    style="@style/SecondaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/profile_item_value_margin_left"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:maxLines="1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_white">

                <View
                    style="@style/DividerStyle"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flHometown"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/hometown" />

                <TextView
                    android:id="@+id/tvHometown"
                    style="@style/SecondaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/profile_item_value_margin_left"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical|right"
                    android:maxLines="2" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/ItemBottomShadowStyle" />

        <View
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/medium_vertical_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flSignature"
                style="@style/ItemStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_signature_item_height">

                <TextView
                    style="@style/PrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:text="@string/signature" />

                <TextView
                    android:id="@+id/tvSignature"
                    style="@style/SecondaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/profile_item_value_margin_left"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical|right"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="2" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/ItemBottomShadowStyle" />
    </LinearLayout>

    <View
        android:id="@+id/fullImageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_background"
        android:visibility="invisible" />

    <com.alexvasilkov.gestures.commons.circle.CircleGestureImageView
        android:id="@+id/singleImageFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</FrameLayout>